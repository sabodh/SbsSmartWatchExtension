<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/smart_watch_2_control_width"
                android:layout_height="@dimen/smart_watch_2_control_height"
                tools:ignore="PxUsage,UselessParent,HardcodedText" >

    <TextView
            android:id="@+id/club_tracker_title"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_alignParentTop="true"
            android:paddingTop="0dp"
            android:paddingBottom="3dp"
            android:text="CLUB TRACKER"
            android:gravity="center"
            android:background="@color/dark_green_background"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

    <TextView
            android:id="@+id/shot_1"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_below="@id/club_tracker_title"
            android:paddingTop="1dp"
            android:text=""
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

    <TextView
            android:id="@+id/shot_2"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_below="@id/shot_1"
            android:paddingTop="1dp"
            android:text=""
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

    <TextView
            android:id="@+id/shot_3"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_below="@id/shot_2"
            android:paddingTop="1dp"
            android:text=""
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

    <TextView
            android:id="@+id/shot_4"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_below="@id/shot_3"
            android:paddingTop="1dp"
            android:text=""
            android:singleLine="true"
            android:textSize="12dp"
            android:textColor="@color/white"
            />

</RelativeLayout>