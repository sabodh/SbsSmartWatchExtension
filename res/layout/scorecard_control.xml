<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/smart_watch_2_control_width"
                android:layout_height="@dimen/smart_watch_2_control_height"
                tools:ignore="PxUsage,UselessParent,HardcodedText"
        android:background="@color/white">

    <TextView
            android:id="@+id/scorecard_title"
            android:layout_width="fill_parent"
            android:layout_height="17dp"
            android:layout_alignParentTop="true"
            android:paddingTop="0dp"
            android:paddingBottom="3dp"
            android:text="SCORECARD"
            android:gravity="center"
            android:background="@color/dark_green_background"
            android:textSize="12dp"
            />

    <ListView
            android:id="@+id/scorecard_listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/scorecard_title"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>
